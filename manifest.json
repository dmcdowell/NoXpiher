{
  "manifest_version": 2,

  "name": "NoXpiher",
  "description": "This extension blocks any posts from Xpiher on the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "NoXpiher"
  },
  "content_scripts": [
        {
            "matches": ["*://forums.darkfallonline.com/*"],
            "js": ["NoXpiher.js"],
            "run_at": "document_end"
        }
    ],
  "permissions": [
	"tabs", "http://forums.darkfallonline.com/*",
			"https://forums.darkfallonline.com/*"
  ]
}